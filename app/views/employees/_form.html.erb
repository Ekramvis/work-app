<div class="form">
  <%= form_for(@employee) do |f| %>

  <p>
    <%= f.label :supervisor_id  %>
    <%= f.collection_select :supervisor_id, @employees, :id,
        :name %>
  </p>

  <p>
    <% @teams.each do |team| %>
      <%= f.label team.name %>
      <%= check_box_tag "employee[team_ids][]", team.id %>
    <% end %>
  </p>

  <div class="subform">
    <%#= f.fields_for @employee_profile do |ep| %>
      <%#=%>
    <%#end%>
  </div>

  <%= f.submit "Yahtzee" %>

  <% end %>
</div>